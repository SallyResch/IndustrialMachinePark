@page "/machines"
@attribute [StreamRendering]

<h3>MachineOverview</h3>

@if(Machines == null)
{
    <p>Loading machines...</p>
}
else
{
    <table class="table table-striped tabel-success table-hover">
        <thead>
            <tr>
                <th>Machine ID</th>
                <th>Name</th>
                <th>Latest Data</th>
                <th>Online/OffLine</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var machine in Machines)
            {
                <tr>
                   <td></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<Machine> Machines { get; set; } = default!;
    [Inject]
    public IMachineDataService? MachineDataService { get; set; }

    protected async override Task OnInitializedAsync() => Machines = (await MachineDataService.GetAllMachines()).ToList();
}
